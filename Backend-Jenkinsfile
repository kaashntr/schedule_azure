pipeline{
    agent any

    stages{
        stage("Checkout SCM"){
            steps{
                checkout scm
            }
        }
        stage("Deploy container from image"){
            steps{
                script{
                    withCredentials([azureServicePrincipal('azure-service-principal')]) {
                        sh 'sh scripts/az_login.sh'
                        sh 'az account show'
                    }
                }
            }
        }
    }
}